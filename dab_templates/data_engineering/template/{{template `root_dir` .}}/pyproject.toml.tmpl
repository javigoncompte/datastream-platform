[project]
name = "{{.project_name}}"
version = "0.0.0"
description = "{{.project_name}}"
authors = []
requires-python = ">=3.12"
dynamic = ["una"]  # needed for hatch-una metadata hook to work
dependencies = [
    "transformation",
    "client",
    "core",
    "{{.project_name}}",
    "databricks-labs-dqx>=0.9.2",
]

[dependency-groups]
dev = [
    "client",
    "core",
    "transformation",
    "databricks-connect~=16.4.3",
    "nbformat>=5.10.4",
    "pre-commit~=4.0.1",
    "polars~=1.12.0",
    "pyright~=1.1.391",
    "pytest~=8.3.5",
    "ruff~=0.12.7",
    "una>=0.6.5",
    "ipykernel>=6.29.5",
]

[build-system]
requires = ["hatchling", "hatch-una"]
build-backend = "hatchling.build"

[tool.hatch.metadata]
allow-direct-references = true

[tool.hatch.build.hooks.una-build]
[tool.hatch.metadata.hooks.una-meta]

[tool.uv.sources]
client = { workspace = true }
core = { workspace = true }
transformation = { workspace = true }